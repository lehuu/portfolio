{
  "compilerOptions": {
    "paths": {
      "@components/*": ["./components/*"],
      "@components": ["./components"],
      "@icons/*": ["./icons/*"],
      "@icons": ["./icons"],
      "@pages/*": ["./pages/*"],
      "@pages": ["./pages"],
      "@styles/*": ["./styles/*"],
      "@styles": ["./styles"],
      "@hooks/*": ["./hooks/*"],
      "@hooks": ["./hooks"],
      "@utils/*": ["./utils/*"],
      "@utils": ["./utils"]
    },
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "jsx": "react",
    "lib": ["dom", "esnext", "es2015", "es2016", "es2017"],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "plugins": [{ "name": "typescript-styled-plugin" }],
    "target": "es2015"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules/*", "public/*"]
}
